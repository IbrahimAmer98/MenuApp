@model MenuApp.Models.CountriesSearch
<form asp-action="CountriesSearch" method="post">
    <div class="row">
        <label asp-for="Serach">Enter your text :</label>
        <input asp-for="Serach" type="text" required>
        <span asp-validation-for="@Model.Serach" class="text-danger "></span>
        <button type="submit" class="btn btn-primary ">Go</button>
    </div>
    <ul>
        @if (Model.FilteredCountries != null)
        {
            foreach (var item in Model.FilteredCountries)
            {
                <li>@item</li>
            }
        }
    </ul>

</form>